@{
    ViewBag.Title = "List";
    Layout = "~/Areas/AdminIT/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                    </div>
                    <h2 class="panel-title">Load danh sách từ trong từ điển </h2>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="inputPlaceholder">Chọn sản phẩm</label>
                        <div class="col-md-6">
                            @Html.DropDownList("GroupComentId", (SelectList)ViewBag.GroupComent, "Chọn sản phẩm", new { @class = "form-control", id = "GroupComentId" })
                        </div>
                        <div class="col-md-4">
                            <button id="loadListVoc" class="mb-xs mt-xs mr-xs btn btn-success"><i class="fa fa-search-plus"></i> Load danh sách từ</button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <div id="listVocabulary">
        <div class="clearfix"></div>
        <div id="loadImage" class="hide text-center">
            <img src="~/Content/images/loadingFlightDetails.gif" width="180" />
            <span style="font-style:italic">Đang thực hiên tải từ khóa...</span>
        </div>
        @Html.Action("LoadListVocabulary", new { idgc = ViewBag.Id })
    </div>

</div>

