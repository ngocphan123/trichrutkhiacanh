@model StudyDoIT.Models.NLP.TypeMenu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/AdminIT/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                </div>

                <h2 class="panel-title">Sửa menu</h2>
            </header>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "Menu", FormMethod.Post, new { @class = "form-horizontal form-bordered", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("Id")
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="inputPlaceholder">Mã thể loại</label>
                        <div class="col-md-6">
                            @Html.ValidationSummary(true)
                            @Html.TextBoxFor(model => model.Id, new { @class = "form-control", disabled = "" })
                            @*@Html.ValidationMessageFor(model => model.Id)*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="inputPlaceholder">Tên thể loại</label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Tên thể loại" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
 
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="inputPlaceholder">Hiển thị</label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.Publich, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Publich)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="mb-xs mt-xs mr-xs btn btn-success"><i class="fa fa-save"></i> Lưu</button>
                            @*<button type="submit" class="mb-xs mt-xs mr-xs btn btn-default"><i class="fa fa-refresh"></i> Lưu và tiếp tục sửa</button>*@
                            <button onclick="form.action ='/AdminIT/TypeMenu'" class="mb-xs mt-xs mr-xs btn btn-default"><i class="fa fa-arrow-circle-o-right"></i> Quay lại danh sách</button>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</div>


