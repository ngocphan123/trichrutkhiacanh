@model IEnumerable<StudyDoIT.Models.NLP.GroupComent>

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/AdminIT/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                    </div>
                    <h2 class="panel-title">Load danh sách sản phẩm</h2>
                    <div style="float: right; margin-right: 40px; margin-top: -27px;">
                        <a class="btn btn-success" href="/AdminIT/GroupComent/Create"> <span><i class="fa fa-plus"></i></span> Thêm sản phẩm mới</a>
                    </div>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="inputPlaceholder">Chọn nhóm sản phẩm</label>
                        <div class="col-md-5">
                            @Html.DropDownList("ProductId", (SelectList)ViewBag.Product, "Chọn nhóm sản phẩm", new { @class = "form-control", id = "ProductId" })
                        </div>
                        <div class="col-md-4 control-label">
                            <button id="loadListGC" type="submit" class="mb-xs mt-xs mr-xs btn btn-success"><i class="fa fa-search-plus"></i> Load danh sách sản phẩm</button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <div id="listGComment">
        <div class="clearfix"></div>
        <div id="loadImage" class="hide text-center">
            <img src="~/Content/images/loadingFlightDetails.gif" width="180" />
            <span style="font-style:italic">Đang thực hiên tải sản phẩm...</span>
        </div>
        @Html.Action("LoadListGComment", new { idgc = ViewBag.Id })
    </div>

    <section class="panel hide" id="divResuft">
        <div class="panel-body">
            <label>Nhóm sản phẩm này chưa có sản phẩm, bạn có muốn thêm sản phẩm cho nhóm sản phẩm này!</label>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button onclick="form.action ='/AdminIT/GroupComent/Create/@ViewBag.Id'" class="mb-xs mt-xs mr-xs btn btn-success"><i class="fa fa-plus"></i> Thêm bình luận cho sản phẩm</button>
                </div>
            </div>
        </div>
    </section>

</div>

