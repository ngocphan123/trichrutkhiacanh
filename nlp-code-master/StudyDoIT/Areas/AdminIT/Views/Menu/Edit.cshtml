@model StudyDoIT.Models.NLP.TypeMenu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/AdminIT/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                </div>

                <h2 class="panel-title">Sửa Menu</h2>
            </header>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "Menu", FormMethod.Post, new { @class = "form-horizontal form-bordered", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("Id")
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="inputPlaceholder">Tên Menu</label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(e => e.Name, new { @class = "form-control", required = "required", disabled = "" })
                            @*@Html.DropDownListFor(model => model.TypeMenuId, (SelectList)ViewBag.TypeMenu, "", new { @class = "form-control", disable="disable" })*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-9 control-label " for="inputPlaceholder" style="font-size:16px;">
                            Lựa chọn và sắp xếp menu: 
                            <code>Kéo thả menu từ cột trái sang cột phải</code>
                        </label>
                        <div class="clearfix"></div>
                        <br />
                        <div class="col-md-12">
                            @Html.Action("LoadTreeMenu", "Home", new { id = Model.Id })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="inputPlaceholder"></label>
                        <div class="col-md-6">
                            <div class="checkbox-custom checkbox-success">
                                @if (Model.Publich == 0)
                                {
                                    <input name="Publich" type="checkbox" id="checkboxExample3">
                                }
                                else
                                {
                                    <input name="Publich" type="checkbox" checked id="checkboxExample3">
                                }
                                <label for="checkboxExample" style="font-size:16px;">Hiển thị</label>
                            </div>
                            @Html.ValidationMessageFor(model => model.Publich)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="mb-xs mt-xs mr-xs btn btn-success"><i class="fa fa-save"></i> Lưu</button>
                            @*<button type="submit" class="mb-xs mt-xs mr-xs btn btn-default"><i class="fa fa-refresh"></i> Lưu và tiếp tục sửa</button>*@
                            <button onclick="form.action ='/AdminIT/Menu'" class="mb-xs mt-xs mr-xs btn btn-default"><i class="fa fa-arrow-circle-o-right"></i> Quay lại danh sách</button>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</div>




